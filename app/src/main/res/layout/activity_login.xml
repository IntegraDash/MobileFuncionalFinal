<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".LoginActivity"
        android:background="@drawable/fundo"

        android:padding="0dp"
>


    <EditText
            android:layout_width="326dp"
            android:layout_height="62dp"
            android:inputType="textPassword"
            android:ems="10"
            android:hint="******"
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            android:background="@drawable/style_card"
            android:paddingStart="10dp"
            android:id="@+id/campo_senha"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/titulo_senha" android:layout_marginTop="4dp"
    />
    <TextView
            android:text="Senha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/titulo_senha"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:fontFamily="@font/titilliumweb_light"
            app:layout_constraintTop_toBottomOf="@+id/campo_email"
            android:layout_marginTop="56dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.323"/>
    <EditText
            android:layout_width="326dp"
            android:layout_height="62dp"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:hint="exemplo@email.com"
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            android:background="@drawable/style_card"
            android:paddingStart="10dp"
            android:id="@+id/campo_email"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/titulo_email"
            android:layout_marginTop="4dp"/>
    <TextView
            android:text="E-mail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/titulo_email"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:fontFamily="@font/titilliumweb_light"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.324"
            app:layout_constraintTop_toBottomOf="@+id/imageView3" android:layout_marginTop="116dp"/>
    <Button
            android:text="Entrar"
            android:textAllCaps="false"
            android:layout_width="208dp"
            android:layout_height="58dp"
            android:id="@+id/btn_entrar"
            android:fontFamily="@font/titilliumweb_bold"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:backgroundTint="@color/azul_turquesa"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/campo_senha"
            android:layout_marginTop="32dp" app:layout_constraintHorizontal_bias="0.497"/>


    <ImageView
            android:layout_width="412dp"
            android:layout_height="133dp"
            app:srcCompat="@drawable/vectori"
            android:id="@+id/imageView3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="324dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>